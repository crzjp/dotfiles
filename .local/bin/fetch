#!/usr/bin/env sh

pk="$(xbps-query -l | wc -l)"
pk="${pk##*\ }"
wm="$(awk '/exec/{print $NF}' $XINITRC)"
cl="[32;1m"
cr="[0m"

case "$INSIDE_EMACS" in
    *eshell*)
        sh="eshell"
        tm="emacs"
        ;;
    *vterm*)
        sh="${SHELL##*/}"
        tm="vterm"
        ;;
    *)
        sh="${SHELL##*/}"
        tm="${TERM%-*}"
        ;;
esac

cat <<EOF

  ${cl}Void GNU/Linux${cr}
  pk ${cl}::${cr} $pk
  sh ${cl}::${cr} $sh
  tm ${cl}::${cr} $tm
  wm ${cl}::${cr} $wm

EOF
