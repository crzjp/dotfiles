#!/usr/bin/env sh

sy="$(uname -sr)"
pk="$(pkg info | wc -l)"
pk="${pk##* }"
wm="$(awk '/exec/{print $NF}' ~/.xinitrc)"
cl="[31;1m"
cr="[0m"

case "$INSIDE_EMACS" in
    *eshell*)
        sh="eshell"
        tm="emacs"
        ;;
    *vterm*)
        sh="${SHELL##*/}"
        tm="vterm"
        ;;
    *comint*)
        sh="${SHELL##*/}"
        tm="emacs"
        ;;
    *)
        sh="${SHELL##*/}"
        tm="${TERM%-*}"
        ;;
esac

cat <<EOF

  ${cl}${sy}${cr}
  pk ${cl}::${cr} $pk
  sh ${cl}::${cr} $sh
  tm ${cl}::${cr} $tm
  wm ${cl}::${cr} $wm

EOF
