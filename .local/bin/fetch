#!/usr/bin/env sh

pk="$(guix package -I | wc -l)"
wm="$(awk '/exec/{print $NF}' ~/.config/sx/sxrc)"
cl="[33;1m"
cr="[0m"

case "$INSIDE_EMACS" in
    *eshell*)
        sh="eshell"
        tm="emacs"
        ;;
    *vterm*)
        sh="${SHELL##*/}"
        tm="vterm"
        ;;
    *comint*)
        sh="${SHELL##*/}"
        tm="emacs"
        ;;
    *)
        sh="${SHELL##*/}"
        tm="${TERM%-*}"
        ;;
esac

cat <<EOF

  ${cl}GNU Guix SD${cr}
  pk ${cl}::${cr} $pk
  sh ${cl}::${cr} $sh
  tm ${cl}::${cr} $tm
  wm ${cl}::${cr} $wm

EOF
