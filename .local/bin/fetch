#!/usr/bin/env sh

sy="FreeBSD"
wm="$(awk '/exec/{print $NF}' ~/.xinitrc)"
pk="$(pkg info | wc -l)"
pk="${pk##*\ }"
cl="[31;1m"
cr="[0m"

case "$INSIDE_EMACS" in
    *eshell*)
        sh="eshell"
        tm="emacs"
        ;;
    *comint*)
        sh="${SHELL##*/}"
        tm="emacs"
        ;;
    *)
        sh="${SHELL##*/}"
        tm="${TERM%-*}"
        ;;
esac

cat <<EOF

  os ${cl}::${cr} ${sy}
  pk ${cl}::${cr} ${pk}
  sh ${cl}::${cr} ${sh}
  tm ${cl}::${cr} ${tm}
  wm ${cl}::${cr} ${wm}

EOF
