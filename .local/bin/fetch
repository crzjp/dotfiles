#!/usr/bin/env sh

sy="GNU GuixSD"
wm="$(awk '/exec/{print $NF}' ~/.config/sx/sxrc)"
cl="[33;1m"
cr="[0m"

case "$INSIDE_EMACS" in
    *eshell*)
        sh="eshell"
        tm="emacs"
        ;;
    *vterm*)
        sh="${SHELL##*/}"
        tm="vterm"
        ;;
    *comint*)
        sh="${SHELL##*/}"
        tm="emacs"
        ;;
    *)
        sh="${SHELL##*/}"
        tm="${TERM%-*}"
        ;;
esac

cat <<EOF

  os ${cl}::${cr} ${sy}
  sh ${cl}::${cr} ${sh}
  tm ${cl}::${cr} ${tm}
  wm ${cl}::${cr} ${wm}

EOF
