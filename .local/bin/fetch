#!/usr/bin/env sh

sy="$(uname -sr)"
pk="$(pkg info | wc -l)"
pk="${pk##* }"
wm="$(awk '/exec/{print $NF}' ~/.xinitrc)"
cl="[31;1m"
cr="[0m"

case "$INSIDE_EMACS" in
    *eshell*)
        sh="eshell"
        tm="emacs"
        ;;
    *vterm*)
        sh="${SHELL##*/}"
        tm="vterm"
        ;;
    *comint*)
        sh="${SHELL##*/}"
        tm="emacs"
        ;;
    *)
        sh="${SHELL##*/}"
        tm="${TERM%-*}"
        ;;
esac

cat <<EOF

        ${cl}OS ${cr}${sy}
  ${cl}PACKAGES ${cr}${pk}
     ${cl}SHELL ${cr}${sh}
  ${cl}TERMINAL ${cr}${tm}
        ${cl}WM ${cr}${wm}

EOF
